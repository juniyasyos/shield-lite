{
    "name": "juniyasyos/shield-lite",
    "description": "Filament Shield Lite is an effortless role and permission management plugin for Filament",
    "keywords": [
        "Shield plugin",
        "role and permission Filament",
        "role management Filament",
        "access permissions Filament",
        "Shield Filament",
        "Shield plugin",
        "juniyasyos ladmin",
        "Hexa installation",
        "Filament integration",
        "Filament permission setup",
        "Filament access control",
        "role management PHP",
        "Filament panel",
        "Filament resource access",
        "Filament widget permissions"
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "juniyasyos\\ShieldLite\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "authors": [
        {
            "name": "Asep",
            "email": "juniyasyos@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "spatie/laravel-permission": "^6.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "orchestra/testbench": "^9.0|^10.0|^11.0"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.x-dev"
        },
        "laravel": {
            "providers": [
                "juniyasyos\\ShieldLite\\ShieldLiteServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    }
}
